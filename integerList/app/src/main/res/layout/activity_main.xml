<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OneDrive"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#0078D4"
        android:padding="16dp"
        android:textStyle="bold" />

    <!-- Input Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100"
            android:inputType="number"
            android:textSize="18sp"
            android:padding="8dp"
            android:background="@android:drawable/edit_text" />

    </LinearLayout>

    <!-- Radio Group for Number Types -->
    <RadioGroup
        android:id="@+id/rgNumberType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbOdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lẻ"
                android:checked="true"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbPrime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số nguyên tố"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbPerfect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số hoàn hảo"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbEven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số chẵn"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số chính phương"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbFibonacci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số Fibonacci"
                android:textSize="14sp" />

        </LinearLayout>

    </RadioGroup>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- FrameLayout to hold ListView and TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ListView for displaying numbers -->
        <ListView
            android:id="@+id/lvNumbers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp" />

        <!-- TextView for "No data" message -->
        <TextView
            android:id="@+id/tvNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Không có số nào thỏa mãn"
            android:textSize="16sp"
            android:textColor="#666666"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>